# Alist service
alist.pm6422.site {
    reverse_proxy alist:5244
}

# S-UI web admin port (2095) - 使用主机网关IP
us.pm6422.site {
    reverse_proxy host.docker.internal:2095 {
        header_up X-Forwarded-Proto https
        header_up X-Forwarded-Host {host}
        header_up X-Real-IP {remote}
    }
}

# S-UI subscription port (2096) - 使用主机网关IP
us.pm6422.site:2096 {
    reverse_proxy host.docker.internal:2096 {
        header_up X-Forwarded-Proto https
        header_up X-Forwarded-Host {host}
        header_up X-Real-IP {remote}
    }
}